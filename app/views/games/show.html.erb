<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h3 class="text-center"><u><%= "#{@game.name}" %></u></h3>
  <br />
  <h4 class="text-center"><%= "It's #{@game.current_turn}'s turn!" %></h4>
  <br />

  <i><%= "White Player: #{@game.white_player.username}" %></i>

  <table class="chessboard" data-game_id="<%= @game.id %>", style="margin:1em auto;">
    <% 8.times do |row| %>
      <tr>
        <% 8.times do |column| %>
          <% piece = @game.pieces.where(x_cord: column, y_cord: row).first %>
          <% if piece %>
            <td data-row="<%= row %>" data-column="<%= column %>">
              <div class="content piece droppable">
                <span class="draggable" data-piece_id="<%= piece.id %>"><%= piece.image %></span>
              </div>
            </td>
          <% else %>
            <td data-row="<%= row %>" data-column="<%= column %>">
              <div class="content piece droppable">
                <span class="droppable"><%= link_to '&nbsp;'.html_safe %></span>
              </div>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>

  <% if @game.black_player.present? %>
    <i><%= "Black Player: #{@game.black_player.username}" %></i>
  <% else %>
    <i>You need an opponent! Invite a friend to play.</i>
  <% end %>
</div>